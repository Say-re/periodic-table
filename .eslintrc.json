{
  "parser": "@typescript-eslint/parser",
  "extends": [
      "airbnb-base",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
          "arrowFunctions": true,
          "binaryLiterals": true,
          "blockBindings": true,
          "classes": true,
          "no-dupe-else-if": true,
          "object-shorthand": [
              "error",
              "always"
          ]
      }
  },
  "plugins": [
      "react",
      "import",
      "jsx-a11y"
  ],
  "env": {
      "browser": true,
      "node": true,
      "jest": true
  },
  "settings": {
      "ecmascript": 6,
      "tsx": true,
      "import/resolver": {
          "node": {
              "extensions": [
                  ".js",
                  ".ts",
                  ".tsx"
              ]
          }
      },
      "react": {
          "version": "16.4"
      }
  },
  "rules": {
      "array-bracket-spacing": [
          "error",
          "always",
          {
              "arraysInArrays": false,
              "objectsInArrays": false,
              "singleValue": false
          }
      ],
      "class-methods-use-this": [
          0
      ],
      "comma-spacing": [
          "error",
          {
              "before": false,
              "after": true
          }
      ],
      "comma-dangle": [
          "error",
          {
              "arrays": "always-multiline",
              "objects": "always-multiline",
              "imports": "always-multiline",
              "exports": "always-multiline",
              "functions": "never"
          }
      ],
      "default-param-last": 0,
      "dot-notation": [
          1
      ],
      "func-style": [
          "error",
          "declaration",
          {
              "allowArrowFunctions": true
          }
      ],
      "react/prop-types": [
          0
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
        "ts": "never",
        "tsx": "never"
        }
        ],
      "jsx-a11y/label-has-for": "off",
      "jsx-a11y/anchor-is-valid": [
          "error",
          {
              "components": [
                  "Link"
              ],
              "specialLink": [
                  "to",
                  "hrefLeft",
                  "hrefRight"
              ],
              "aspects": [
                  "noHref",
                  "invalidHref",
                  "preferButton"
              ]
          }
      ],
      "jsx-a11y/no-onchange": [
          0
      ],
      "jsx-quotes": [
          "error",
          "prefer-single"
      ],
      "max-len": 0,
      "no-else-return": [
          "error",
          {
              "allowElseIf": false
          }
      ],
      "no-plusplus": [
          0
      ],
      "no-extra-boolean-cast": [
          0
      ],
      "no-dupe-else-if": [
          2
      ],
      "no-unreachable": [
          2
      ],
      "object-shorthand": [
          "error",
          "always"
      ],
      "prefer-arrow-callback": [
          "error",
          {
              "allowNamedFunctions": true
          }
      ],
      "react/jsx-closing-bracket-location": 0,
      "react/no-multi-comp": [
          2
      ],
      "space-before-function-paren": [
          "error",
          "always"
      ]
  }
}
